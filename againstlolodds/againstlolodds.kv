#:kivy 1.10.1

<Title@Label>:
    
    font_size: '30sp'


<Player>:
    name: ''
    champion: ''
    size_hint_y: None
    height: '30sp'
    color: (255, 255, 1, 1)
    canvas.before:
        Color:
            rgba: .4, .4, .4, 1
        Rectangle:
            pos: self.pos
            size: self.size        
    
    Label:
        text: root.name
        font_size: '15sp'
    Label:
        text: root.champion
        font_size: '15sp'


<TeamList>:
    name: ""
    orientation: 'vertical'
    team: team
    Title:
        text: root.name
        font_size: '30sp'
        size_hint_y: .3
    BoxLayout:
        size_hint_y: .2
        Label:
            text: 'Name'
            font_size: '20'
        Label:
            text: 'Champion ID'
            font_size: '20'
    StackLayout:
        orientation: 'tb-lr'
        id: team


<Result>:
    size_hint_y: .5
    Label:
        text: 'Prediction'
        font_size: '30sp'
    Label:
        text: '100%'
        font_size: '30sp'


<MainPage>:
    session: app.session
    name: 'main'

    on_session: self.session.start()
    BoxLayout:
        orientation: 'vertical'    
        BoxLayout:
            TeamList:
                id: team
                name: 'Team'
            TeamList:
                id: enemy
                name: 'Enemy'
        AnchorLayout:
            anchor_y: 'bottom'
            Result:



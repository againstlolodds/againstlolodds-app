#:kivy 1.10.1

<Title@Label>:
    
    font_size: '30sp'

<AttrLabel>:
    font_size: '15sp'

<Player>:
    session: None
    size_hint_y: None
    height: '30sp'
    color: (255, 255, 1, 1)
    champion: ''
    name: ''
    role: ''
    canvas.before:
        Color:
            rgba: .4, .4, .4, 1
        Rectangle:
            pos: self.pos
            size: self.size        

<Enemy>: 
    AttrLabel: 
        text: root.champion
    AttrLabel:
        text: root.role

<Friendly>:
    AttrLabel:
        text: root.name
    AttrLabel: 
        text: root.champion
    AttrLabel:
        name: root.role

<Header>:
    font_size: '20sp'

<PlayerList>:
    name: ""
    orientation: 'vertical'
    team: team

    Title:
        text: root.name
        font_size: '30sp'
        size_hint_y: .3
    BoxLayout:
        id: header
        size_hint_y: .2
    StackLayout:
        orientation: 'tb-lr'
        id: team

<TeamList>:
    headers: ['Summoner', 'Champion', 'Role']


<EnemyList>:
    headers: ['Champion', 'Role']


<Result>:
    size_hint_y: .5
    Label:
        text: 'Prediction'
        font_size: '30sp'
    Label:
        text: '100%'
        font_size: '30sp'


<MainPage>:
    session: app.session
    name: 'main'

    on_session: self.session.start()
    BoxLayout:
        orientation: 'vertical'    
        BoxLayout:
            TeamList:
                session: root.session
                id: team
                name: 'Team'
            EnemyList:
                session: root.session
                id: enemy
                name: 'Enemy'
        AnchorLayout:
            anchor_y: 'bottom'
            Result:


<LoadingPage>:
    name: 'loading'
    BoxLayout:    
        orientation: 'vertical'
        Image:
            source: str(root.resdir / 'loading.zip')
            # allow_stretch: True
            anim_delay: 1 / 30
        Title:
            text: 'Waiting for selection phase to begin'


<ManagerPage>:
    orientation: 'vertical'
    Title:
        text: "AgainstLoLOdds"
        font_size: '40sp'
        size_hint_y: None
        color: (.4, .4, .4, 1)
        height: '60sp'
    Manager:


<Manager>:
    LoadingPage:
    MainPage:
        session: app.session

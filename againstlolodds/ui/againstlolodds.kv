#:kivy 1.10.1

<Title@Label>:
    
    font_size: '30sp'


<Player>:
    name: ''
    champion: ''
    size_hint: 1, .5
    color: (255, 255, 1, 1)
    Label:
        text: root.name
    Label:
        text: root.champion


<TeamList>:
    name: ""
    orientation: 'vertical'
    team: team
    Title:
        text: root.name
        font_size: '30sp'
        size_hint_y: .3
    BoxLayout:
        size_hint_y: .2
        Label:
            text: 'Name'
            font_size: '15'
        Label:
            text: 'Champion ID'
            font_size: '15'
    BoxLayout:
        orientation: 'vertical'
        id: team


<MainPage>:
    session: app.session
    name: 'main'

    on_session: self.session.start()
    BoxLayout:
        TeamList:
            id: team
            name: 'Team'
        TeamList:
            id: enemy
            name: 'Enemy'


<LoadingPage>:
    name: 'loading'
    Title:
        text: 'Waiting for selection phase to begin...'
    

<ManagerPage>:
    orientation: 'vertical'
    Title:
        text: "AgainstLoLOdds"
        font_size: '40sp'
        size_hint_y: None
        height: '40sp'
    Manager:


<Manager>:
    LoadingPage:
    MainPage:
        session: app.session
